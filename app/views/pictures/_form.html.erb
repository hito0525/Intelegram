<p id="notice"><%= notice %></p>

<%= form_for(@picture, url: choose_new_or_edit) do |f| %>

<%= f.error_messages! %>

  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= image_tag @picture.image.url if @picture.image? %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>

  <%= f.label :投稿コメント %>
  <%= f.text_area :content, class: 'form-control'  %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>


<%= link_to "ブログ一覧画面にもどる", pictures_path %>

